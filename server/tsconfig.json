{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./", // Set rootDir to the project root
      "strict": true,
      "esModuleInterop": true,
      "allowJs": true, // Allow JavaScript files
      "checkJs": false // Disable type-checking for JavaScript files
    },
    "include": ["**/*"], // Include all files in the project
    "exclude": ["node_modules"]
}